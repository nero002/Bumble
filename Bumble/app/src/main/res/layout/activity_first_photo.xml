<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellow_bumble"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstPhotoActivity">


    <TextView
        android:id="@+id/textView3"
        style="@style/TitleTextViewBackground"
        android:text="@string/add_your_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/textView6"
        style="@style/Title2ndLineTextViewBackground"
        android:text="@string/choose_a_photo_of_just_you_where_you"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        style="@style/Title2ndLineTextViewBackground"
        android:text="@string/can_clearly_see_your_face_you_can"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        style="@style/Title2ndLineTextViewBackground"
        android:text="change this later"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/mEtchooseAPhoto"
        style="@style/SignUpEditText"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/edit_text_bg_addphoto"
        android:ems="10"
        android:text="@string/choose_a_photo"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/mEtAddFromFacebook"
        style="@style/SignUpEditText"
        android:layout_marginTop="@dimen/dp_10"
        android:ems="10"
        android:background="@drawable/edit_text_bg_addphoto"
        android:text="@string/add_from_facebook"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEtchooseAPhoto" />

    <ImageButton
        android:id="@+id/iBtnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/mEtAddFromFacebook"
        app:layout_constraintEnd_toEndOf="@+id/mEtchooseAPhoto"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="@+id/mEtchooseAPhoto"
        app:layout_constraintTop_toTopOf="@+id/mEtchooseAPhoto"
        app:layout_constraintVertical_bias="0.414"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <ImageButton
        android:id="@+id/iBtnFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/mEtAddFromFacebook"
        app:layout_constraintEnd_toEndOf="@+id/mEtAddFromFacebook"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="@+id/mEtAddFromFacebook"
        app:layout_constraintTop_toBottomOf="@+id/iBtnPlus"
        app:layout_constraintVertical_bias="0.727"
        app:srcCompat="@drawable/ic_baseline_facebook_24" />

    <TextView
        android:id="@+id/mTvFullTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:padding="@dimen/dp_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/iBtnCamera"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/camera_view_bg"
        app:layout_constraintBottom_toBottomOf="@id/mTvFullTextView"
        app:layout_constraintEnd_toEndOf="@+id/mTvFullTextView"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@+id/mTvFullTextView"
        app:layout_constraintTop_toTopOf="@+id/mTvFullTextView"
        app:layout_constraintVertical_bias="0.636"
        android:src="@drawable/ic_baseline_camera_alt_24" />

    <TextView
        android:id="@+id/mTvNotSure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/black"
        android:text="@string/not_sure_waht_to_upload"
        app:layout_constraintStart_toEndOf="@+id/iBtnCamera"
        app:layout_constraintBottom_toTopOf="@id/mTvCheckGuidelines"
        app:layout_constraintTop_toTopOf="@+id/mTvFullTextView" />

    <TextView
        android:id="@+id/mTvCheckGuidelines"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_15"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:text="@string/check_out_our_guidelines"
        app:layout_constraintBottom_toBottomOf="@id/mTvFullTextView"
        app:layout_constraintStart_toStartOf="@+id/mTvNotSure"
        app:layout_constraintTop_toBottomOf="@+id/mTvNotSure" />

    <ImageButton
        android:id="@+id/iBtnNextFromFirstPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/circle_phonenumber_bg"
        android:layout_marginBottom="15dp"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintBottom_toTopOf="@+id/mTvFullTextView"
        app:layout_constraintEnd_toEndOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>