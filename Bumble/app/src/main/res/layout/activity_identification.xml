<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bumble"
    tools:context=".IdentificationActivity">

    <TextView
        android:id="@+id/mTvIdentify"
        style="@style/TitleTextViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_identification"
        android:textSize="@dimen/sp_31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvwelcome"
        style="@style/Title2ndLineTextViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/everyone_s_welcome_on_bumble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvIdentify" />

    <TextView
        android:id="@+id/men"
        style="@style/TextView_1RadioBtn"
        android:text="@string/woman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvwelcome" />

    <RadioButton
        style="@style/RadioBtn_started"
        android:background="@drawable/ic_right_tick"
        android:button="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/men"
        app:layout_constraintEnd_toEndOf="@+id/men"
        app:layout_constraintTop_toTopOf="@+id/men" />

    <TextView
        android:id="@+id/women"
        style="@style/TextView_1RadioBtn"
        android:text="@string/man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/men" />

    <RadioButton
        style="@style/RadioBtn_started"
        app:layout_constraintBottom_toBottomOf="@+id/women"
        app:layout_constraintEnd_toEndOf="@+id/women"
        app:layout_constraintTop_toTopOf="@+id/women" />

    <TextView
        android:id="@+id/everyone"
        style="@style/TextView_1RadioBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/non_binary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/women" />

    <RadioButton
        style="@style/RadioBtn_started"
        app:layout_constraintBottom_toBottomOf="@+id/everyone"
        app:layout_constraintEnd_toEndOf="@+id/everyone"
        app:layout_constraintTop_toTopOf="@+id/everyone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_30"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:gravity="center"
        android:text="@string/more_gender_options"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/everyone" />

    <ImageButton
        android:id="@+id/iBtnHowDoYouIdentify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/circle_phonenumber_bg"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circle_phonenumber_bg"/>












</androidx.constraintlayout.widget.ConstraintLayout>