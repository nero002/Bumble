<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/yellow_bumble"
    android:layout_height="match_parent"
    tools:context=".IdentificationActivity">

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_identification"
        android:textSize="@dimen/sp_31"
        android:id="@+id/mTvIdentify"
        style="@style/TitleTextViewBackground"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvIdentify"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/mTvwelcome"
        style="@style/Title2ndLineTextViewBackground"
       android:text="@string/everyone_s_welcome_on_bumble"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/mEtWoman"
        app:layout_constraintTop_toBottomOf="@+id/mTvwelcome"
        android:background="@drawable/rectangle_phonenumber_bg"
        android:layout_marginStart="@dimen/dp_45"
        android:text="@string/woman"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_35"
        android:padding="@dimen/dp_20"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/mEtMan"
        app:layout_constraintTop_toBottomOf="@+id/mEtWoman"
        android:background="@drawable/rectangle_phonenumber_bg"
        android:layout_marginStart="@dimen/dp_45"
        android:text="@string/man"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_20"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>